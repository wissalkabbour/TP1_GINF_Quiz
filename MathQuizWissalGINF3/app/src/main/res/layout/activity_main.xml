<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="@color/background_light">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_math_quiz"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="16dp" />

    <!-- Numbers row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="24sp"
            android:textColor="@color/primary_text"
            android:layout_marginEnd="24dp" />

        <TextView
            android:id="@+id/tvNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="24sp"
            android:textColor="@color/primary_text"
            android:layout_marginStart="24dp" />
    </LinearLayout>

    <!-- User answer label -->
    <TextView
        android:id="@+id/tvAnswerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Votre réponse :"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="8dp" />

    <!-- User answer input -->
    <EditText
        android:id="@+id/etAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez votre réponse"
        android:inputType="numberSigned"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Result label -->
    <TextView
        android:id="@+id/tvResultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_result"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="8dp" />

    <!-- Result / feedback -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="16dp" />

    <!-- Operation buttons: + - × -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_add"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_sub"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_mul"
            android:layout_margin="8dp" />
    </LinearLayout>

    <!-- Generate new question -->
    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_generate" />

</LinearLayout>
